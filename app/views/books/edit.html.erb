<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'layouts/error', list: @book %>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
            <%= f.text_field :title, class:"form-control", id:"inputTitle", placeholder:"本のタイトル" %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label>
            <%= f.text_area :body, class:"form-control", id:"inputBody", placeholder:"書評" %>
        </div>
        <%= f.submit "Update Book" %>
      <% end %>
      <br>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
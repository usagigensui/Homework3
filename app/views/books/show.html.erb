<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@detail.user.id) do %>
                <%= attachment_image_tag @detail.user, :profile_image, :fill, 40, 40, format:"jpeg", fallback: "no_image.jpg", size:"40x40" %><br>
                <%= @detail.user.name %>
                <% end %>
            </td>
            <td>
              <%= link_to "" do %>
                <%= @detail.title %>
              <% end %>
            </td>
            <td><%= @detail.body %></td>
            <td>
              <% if @detail.user == current_user %>
              　<%= link_to "Edit", edit_book_path(@detail.id) %>
              <% end %>
            </td>
            <td>
              <% if @detail.user == current_user %>
                <%= link_to "Destroy", book_path(@detail.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
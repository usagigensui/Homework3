  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user.id) do %>
          <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format:"jpeg", fallback: "no_image.jpg", size:"40x40" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td colspan="5">
        <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？" do %>
            <button class="btn btn-danger btn-sm">Destroy</button>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
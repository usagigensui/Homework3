<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= render 'layouts/error', list: @user %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
            <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label><br>
            <%= f.text_area :introduction, class:"form-control", id:"inputIntroduction", placeholder:"自己紹介" %>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>
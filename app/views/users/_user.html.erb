<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:"jpeg", fallback: "no_image.jpg", size:"100x100" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if user.id == current_user.id %>
    <%= link_to "設定ボタン", edit_user_path(user.id) %>
  <% else %>
    <%= link_to "設定ボタン", user_path(current_user.id) %>
  <% end %>
</div>
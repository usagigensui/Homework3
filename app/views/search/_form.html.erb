<div class="row">
  <div class="m-2 mx-auto">
    <% if user_signed_in? %>
      <%= form_tag(search_path, method: :get, class:"form-inline") do %>
        <div class="form-group mr-2">
          <%= text_field_tag "search[value]", "", {class:"form-control"} %>
        </div>
        <div class="form-group mr-2">
          <%= select_tag "search[model]", options_for_select({"User" => "user", "Book" => "book"}), class:"form-control" %>
        </div>
        <div class="form-group mr-2">
          <%= select_tag "search[how]", options_for_select({"完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"}), class:"form-control" %>
        </div>
        <div class="form-group mr-2">
          <%= submit_tag "検索", class:"form-control" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>